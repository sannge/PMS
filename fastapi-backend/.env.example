# Database
DB_SERVER=localhost
DB_NAME=PMDB
DB_USER=pmdbuser
DB_PASSWORD=your-password-here

# MinIO (NOTE: API port is typically 9000, console is 9001)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-secret-key
MINIO_SECURE=false

# Auth
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Server
HOST=0.0.0.0
PORT=8001

# WebSocket (DDoS protection)
WS_MAX_CONNECTIONS_PER_USER=50
WS_MAX_CONNECTIONS=5000
WS_HEARTBEAT_INTERVAL=30

# Redis for WebSocket scaling (5000 concurrent users)
REDIS_URL=redis://localhost:6379/0

# Connection pool settings
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=100

# Test database (for test_database_url)
TEST_DB_USER=pmsdbtestuser
TEST_DB_PASSWORD=your-test-password-here
