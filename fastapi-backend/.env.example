# Database
DB_SERVER=localhost
DB_PORT=5432
DB_NAME=PMDB
DB_USER=pmdbuser
DB_PASSWORD=your-password-here

# Connection pool settings
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=100

# MinIO (NOTE: API port is typically 9000, console is 9001)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-secret-key
MINIO_SECURE=false

# Auth
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Server
HOST=0.0.0.0
PORT=8001

# WebSocket (DDoS protection)
WS_MAX_CONNECTIONS_PER_USER=50

# Redis for WebSocket scaling (5000 concurrent users)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0
REDIS_RETRY_ON_TIMEOUT=true
REDIS_REQUIRED=false

# Meilisearch (full-text search)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=your-meilisearch-api-key

# ARQ Worker (background job scheduling)
ARQ_ARCHIVE_HOURS=0,12
ARQ_ARCHIVE_MINUTES=
ARQ_PRESENCE_CLEANUP_SECONDS=0,30

# Test database (for test_database_url)
TEST_DB_USER=pmsdbtestuser
TEST_DB_PASSWORD=your-test-password-here
